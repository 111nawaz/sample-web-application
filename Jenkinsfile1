pipeline {
    agent {
                docker {
                image 'maven'
                args '-v $HOME/.m2:/root/.m2'
                }
            }
            
    environment {
        BUILD_COMPLETE = false
    }
    stages {
        stage('Build') {
            failFast true
            parallel {
                stage('Building') {
                    steps {
                        
                        sh "mvn clean install |  tee -a /home/deekshithsn1/output.log"

                        sh '! grep "WARNING:" output.log'

                        script {
                            BUILD_COMPLETE = true
                        }
                    }
                }
                stage('Monitoring the logs') {
                    steps {
                        script {
                            while (BUILD_COMPLETE != true) {
                                sh '! grep "WARNING:" /home/deekshithsn1/output.log'
                                
                            }
                        }
                    }
                }
            }
        }
    }
}
